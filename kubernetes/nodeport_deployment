apiVersion: v1
kind: Namespace
metadata:
  name: app-1

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: indianflag-deployment
  namespace: app-1
  labels:
    app: indianflag
spec:
  replicas: 3
  selector:
    matchLabels:
      app: indianflag
  template:
    metadata:
      labels:
        app: indianflag
    spec:
      containers:
        - name: indianflag
          image: goverdhannaidu/indianflag:v1
          ports:
            - containerPort: 80

---
apiVersion: v1
kind: Service
metadata:
  name: indianflag-service
  namespace: app-1
spec:
  type: NodePort
  selector:
    app: indianflag
  ports:
    - port: 80
      targetPort: 80
      nodePort: 30080
